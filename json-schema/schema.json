{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/radiantearth/mlhub-dataset/main/json-schema/schema.json#",
  "title": "MLHub Dataset Extention",
  "description": "Radiant Earth Foundation MLHub Extension for STAC Catalogs.",
  "oneOf": [
    {
      "$comment": "This is the schema for STAC Catalog.",
      "type": "object",
      "allOf": [
        {
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "Catalog"
            }
          }
        },
        {
          "$ref": "#/definitions/stac_extensions"
        }
      ],
      "anyOf": [
        {
          "$comment": "This is the schema for the top-level fields in a Catalog. Remove this if this extension does not define top-level fields for Catalogs.",
          "allOf": [
            {
              "$ref": "#/definitions/required_fields"
            },
            {
              "$ref": "#/definitions/fields"
            }
          ]
        }
      ]
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": [
        "stac_extensions"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://raw.githubusercontent.com/radiantearth/mlhub-dataset/main/json-schema/schema.json"
          }
        }
      }
    },
    "required_fields": {
      "$comment": "Please list all fields here so that we can force the existance of one of them in other parts of the schemas.",
      "allOf": [
        {"required": ["mlhub:tags"]},
        {"required": ["mlhub:creator_contact"]},
        {"required": ["mlhub:date_added"]},
        {"required": ["mlhub:date_modified"]},
        {"required": ["mlhub:science_keywords"]},
        {"required": ["mlhub:processing_level"]},
        {"required": ["mlhub:collection_progress"]}
      ]
    },
    "fields": {
      "$comment": "Add your new fields here. Don't require them here, do that above in the corresponding schema.",
      "type": "object",
      "properties": {
        "mlhub:tags": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "mlhub:creator_contact": {
          "$ref": "#/definitions/creator_contact"
        },
        "mlhub:publications": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 0,
          "items": {
            "$ref": "#/definitions/external_resource"
          }
        },
        "mlhub:tools_apps": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 0,
          "items": {
            "$ref": "#/definitions/external_resource"
          }
        },
        "mlhub:tutorials": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 0,
          "items": {
            "$ref": "#/definitions/external_resource"
          }
        },
        "mlhub:science_keywords": {
          "type": "array",
          "uniqueItems": true,
          "maxItems": 1,
          "items": {
            "$ref": "#/definitions/science_keyword"
          }
        },
        "mlhub:date_added": {
          "title": "Dataset Added Datetime",
          "type": "string",
          "format": "date-time",
          "pattern": "(\\+00:00|Z)$"
        },
        "mlhub:date_modified": {
          "title": "Dataset Modified Datetime",
          "type": "string",
          "format": "date-time",
          "pattern": "(\\+00:00|Z)$"
        },
        "mlhub:processing_level": {
          "title": "Processing Level",
          "type": "number",
          "const": 3
        },
        "mlhub:collection_progress": {
          "title": "Collection Progress",
          "type": "string",
          "minLength": 1,
          "const": "COMPLETE"
        }
      },
      "patternProperties": {
        "^(?!mlhub:)": {}
      },
      "additionalProperties": false
    },
    "creator_contact": {
      "title": "Creator Contact",
      "type": "object",
      "properties": {
        "contact": {
          "title": "Primary email address for POC",
          "type": "string"
        },
        "creator": {
          "title": "Name and URL of affiliations",
          "type": "string"
        }
      }
    },
    "science_keyword": {
      "title": "GMCD Science Keyword",
      "type": "object",
      "properties": {
        "category": {
          "title": "Category",
          "type": "string"
        },
        "topic": {
          "title": "Topic",
          "type": "string"
        },
        "term": {
          "title": "Term",
          "type": "string"
        },
        "variable_level_1": {
          "title": "Variable Level 1",
          "type": "string"
        },
        "variable_level_2": {
          "title": "Variable Level 2",
          "type": "string"
        },
        "variable_level_3": {
          "title": "Variable Level 3",
          "type": "string"
        },
        "detailed_variable": {
          "title": "Detailed Variable",
          "type": "string"
        }
      }
    },
    "external_resource": {
      "title": "External Resource",
      "type": "object",
      "properties": {
        "url": {
          "title": "URL to external resource",
          "type": "string"
        },
        "title": {
          "title": "Title of linked resource",
          "type": "string"
        },
        "author_url": {
          "title": "Webpage or social media account",
          "type": "string"
        },
        "author_name": {
          "title": "Name of author(s) of external resource",
          "type": "string"
        }
      }
    }
  }
}
